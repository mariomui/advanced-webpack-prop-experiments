{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "declarationDir": "dist/types",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ],
}