{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "dist/types",
    "jsx": "preserve",
    "module": "ES2020",
    // "rootDir": "src",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "ES2020"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules/"
  ]
}