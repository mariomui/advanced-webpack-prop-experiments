{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "dist/types",
    "jsx": "preserve",
    "module": "ES2020",
    "rootDir": "src",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
}